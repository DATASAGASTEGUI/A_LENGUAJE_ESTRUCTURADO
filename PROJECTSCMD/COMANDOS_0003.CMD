@ECHO OFF
TITLE MENU

MODE CON COLS=78 LINES=18
COLOR 06
CHCP 65001 > NUL

:INICIO
CLS

ECHO ┌────────────────────┐
ECHO │ SELECCIONAR OPCION │
ECHO └────────────────────┘

ECHO.

ECHO  1) INGRESE EL NUMERO DE PUERTO PARA BUSCAR EL PROCESO
ECHO  2) INGRESE EL NUMERO DE PROCESO A ELIMINAR
ECHO  3) SALIR

ECHO.

SET /P X=SELECCIONE UNA OPCION [1-3]:
IF "%X%"=="1" GOTO OPCION1
IF "%X%"=="2" GOTO OPCION2
IF "%X%"=="3" GOTO SALIR

:OPCION1
CLS
ECHO 1) INGRESE EL NUMERO DE PUERTO PARA BUSCAR EL PROCESO
ECHO -----------------------------------------------------
SET /P OP1=INGRESE NUMERO DE PUERTO:
netstat -aon | findstr :%OP1%
PAUSE > NUL
GOTO INICIO

:OPCION2
CLS
ECHO 2) INGRESE EL NUMERO DE PROCESO A ELIMINAR
ECHO ------------------------------------------
SET /P OP2=INGRESE NUMERO DE PROCESO:
taskkill /pid %OP2% /F
PAUSE > NUL
GOTO INICIO

:SALIR
EXIT